<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Lestrade{% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,
            <svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22>
                <text y=%221.2em%22 font-size=%2296%22>⚫️</text>
            </svg>
            ">
            {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
            {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
        </head>
        <body>
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarNav"
                            aria-controls="navbarNav"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_index') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_project_index' )}}">Project</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_frame_index')}}">Frames</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_profile')}}">Report</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div id="main" class="container p-4 mt-4">
                {% block body %}{% endblock %}
            </div>
        </body>
    </html>
