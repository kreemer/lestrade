{% extends 'base.html.twig' %}
{% block body %}
    <h1>Project</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Frames</th>
                <td>{{ project.frames|length }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row justify-content-end">
        <div class="p-4">
            <a href="{{ path('app_project_index') }}">back to list</a>
        </div>
        <div class="p-4">
            <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>
        </div>
        <div class="p-4">{{ include('project/_delete_form.html.twig') }}</div>
    </div>
{% endblock %}
